<Page x:Class="Macronomics.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Macronomics"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="LoginPage">

    <StackPanel VerticalAlignment="Bottom">
        <Image Source="https://image.freepik.com/free-icon/apple-logo_318-40184.jpg" Height="100" Margin="0,0,0,20"></Image>
        <TextBox x:Name="UsernameTxt" Text="Brugernavn" TextAlignment="Center" Width="200" Margin="10"/>
        <PasswordBox x:Name="PasswordTxt" Width="200" />
        <Button Content="Login" Click="LoginBtnClicked" Width="100" Margin="0,30,0,50"/>
    </StackPanel>
</Page>
