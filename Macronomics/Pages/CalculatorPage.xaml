<Page x:Class="Macronomics.CalculatorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Macronomics"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="CalculatorPage">

    <StackPanel VerticalAlignment="Bottom" Margin="20">
        <StackPanel Orientation="Horizontal">
           
        </StackPanel>
        <TextBox Text="Højde" Margin="30,0,30,10"></TextBox>
        <TextBox Text="Vægt" Margin="30,0,30,10"></TextBox>
        <TextBox Text="Alder" Margin="30,0,30,10"></TextBox>
        <RadioButton GroupName="Gender" Content="Mand" Margin="30,0,30,10" />
        <RadioButton GroupName="Gender" Content="Kvinde" Margin="30,0,30,10"/>
        <Label Content="Aktivitet" HorizontalAlignment="Center" ></Label>
        <Slider Maximum="100" TickPlacement="BottomRight" TickFrequency="10" IsSnapToTickEnabled="True" Width="200" ValueChanged="ActivitySliderChanged"/>
        <Button Content="Calculate" Click="CalculateBtnClicked" Margin="70,20,70,0"></Button>
    </StackPanel>
</Page>
